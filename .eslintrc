{
    "parser": "babel-eslint",
    "extends": ["eslint:recommended"],
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "plugins": [
      "chai-expect"
    ],
    "globals": {
      "sandbox": true,
      "sinon": true,
      "expect": true
    },
    "rules": {
      "quotes": [2, "double"],
      "no-console": ["warn"],
      "eol-last": [0],
      "no-mixed-requires": [0],
      "no-underscore-dangle": [0]
    }
}
